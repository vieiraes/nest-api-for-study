{
    "[python]": {
      "editor.formatOnType": true
    },
    
    "editor.cursorWidth": 6,
    "editor.inlineSuggest.enabled": true,
    "editor.accessibilitySupport": "off",
    "editor.linkedEditing": true,
    "gitlens.currentLine.scrollable": false,
    "gitlens.codeLens.enabled": false,
    
    "explorer.decorations.colors": true,
    "explorer.compactFolders": false,
    "editor.fontVariations": true,
    "editor.fontWeight": "bold",
    "explorer.confirmDelete": false,
    "files.exclude": {
      "**/__pycache__": true,
      "**/*pytest_cache": true
    },
    "explorer.confirmDragAndDrop": false,
    "workbench.startupEditor": "none",
    "editor.lineHeight": 30,
    "editor.fontFamily": "'Fira Code','JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontSize": 16,
    "terminal.integrated.fontFamily": "JetBrains Mono",
    "terminal.integrated.fontSize": 18,
    "gitlens.graph.scrollRowPadding": 5,
    "editor.scrollbar.scrollByPage": true,
    "editor.scrollbar.verticalScrollbarSize": 34,
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": true,
    "workbench.colorTheme": "pavao-discreto",
    "editor.cursorSmoothCaretAnimation": "on"
  }